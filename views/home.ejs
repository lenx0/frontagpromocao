<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>EJS Is Fun</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>

<body class="container">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <header>
    </header>
    <main>
        <div class="jumbotron" align="center">
            <h1>EVENTOS ALTO GIRO</h1>
        </div>
        <div class="home-title" align="center">
            <h2>Cadastrar nova promoção/campanha</h2>
        </div>
        <form>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputTitle">Título</label>
                    <input type="title" class="form-control" id="inputTitle" placeholder="Insira o título">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputType">Tipo</label>
                    <select id="inputType" class="form-control">
                        <option selected="">Escolher...</option>
                        <option>Campanha</option>
                        <option>Promoção</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputStatus">Status</label>
                    <select id="inputStatus" class="form-control">
                        <option selected="">Escolher...</option>
                        <option>Ativo</option>
                        <option>Inativo</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="date-start">Evento começa:</label>
                <input id="date-start" type="datetime-local">
            </div>
            <div class="form-group">
                <label for="date-end">Evento termina:</label>
                <input id="date-end" type="datetime-local">
            </div>

            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputHost">Host</label>
                    <input type="title" class="form-control" id="inputHost" placeholder="Insira o endereço host">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputPort">Porta</label>
                    <input type="text" class="form-control" id="inputPort" placeholder="Insira a porta">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputName">Nome</label>
                    <input type="text" class="form-control" id="inpuName" placeholder="Insira o nome">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" id="inpuEmail" placeholder="user@example.com">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inpuPassword">Senha</label>
                    <input type="password" class="form-control" id="inpuPassword" placeholder="Senha">
                </div>
            </div>
            <div class="form-group">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </main>
    <footer>
    </footer>
    <p class="text-center text-muted">© Copyright 2022 AGLabs</p>
</body>

</html>